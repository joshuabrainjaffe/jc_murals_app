<div class="eight offset-by-two columns">
    <div class="mural">
      <img class="mural_img" src="../../<%= @mural.image %>" >
      <br>
      <h3 class="title show"><%= @mural.title %></h3>
      <div class="info four columns">
        <a href="<%= @mural.website %>"><h5><%= @mural.artist %></h5></a>
        <h6><%= @mural.year %></h6>
      </div>
      <div class="single_mural">
        <h5><strong><%= @mural.neighborhood %></strong></h5>
          <h6><%= @mural.address %></h6>
          <br>
          <p><%= @mural.description %></p>
          <%= button_to('Edit Mural', edit_mural_path, method: :get, :class => "button") if current_user.id == @mural.users_id %>
          <%= button_to('Delete Mural', @wine, method: :delete, :class => "button") if current_user.id == @mural.users_id %>
      </div>
    </div>
</div>
